# Google OAuth Configuration
VITE_GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Google Maps API Configuration
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Notification Configuration
VITE_NOTIFICATION_API_KEY=your_notification_api_key_here
VITE_VAPID_PUBLIC_KEY=your_vapid_public_key_here
VITE_VAPID_PRIVATE_KEY=your_vapid_private_key_here

# Email Configuration (for notifications and password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here
SMTP_SECURE=false
EMAIL_PROVIDER=gmail
SUPPORT_EMAIL=suporte@replantasystem.com
WEBSITE_URL=https://replantasystem.com

# Alternative Email Providers
SENDGRID_API_KEY=your_sendgrid_api_key_here
MAILGUN_USERNAME=your_mailgun_username_here
MAILGUN_PASSWORD=your_mailgun_password_here

# Database Configuration
DB_CONNECTION_STRING=mongodb://localhost:27017/replantasystem
# Para MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/replantasystem
# Para Docker: mongodb://mongo:27017/replantasystem

# JWT Configuration
JWT_SECRET=your_jwt_secret_here

# Application Environment
NODE_ENV=development
PORT=3000
